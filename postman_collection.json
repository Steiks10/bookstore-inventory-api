{
  "info": {
    "name": "Bookstore Inventory API",
    "_postman_id": "a5e2d2f4-0000-0000-0000-000000000001",
    "description": "Endpoints for creating and listing books",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000",
      "type": "string"
    },
    {
      "key": "page",
      "value": "1",
      "type": "string"
    },
    {
      "key": "page_size",
      "value": "10",
      "type": "string"
    },
    {
      "key": "book_id",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "List Books (no pagination)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/books/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books"
          ]
        }
      }
    },
    {
      "name": "List Books (pagination)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/books/?page={{page}}&page_size={{page_size}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books"
          ],
          "query": [
            {
              "key": "page",
              "value": "{{page}}"
            },
            {
              "key": "page_size",
              "value": "{{page_size}}"
            }
          ]
        }
      }
    },
    {
      "name": "Get Book By ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/books/{{book_id}}/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books",
            "{{book_id}}"
          ]
        }
      }
    },
    {
      "name": "Create Book",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"El Quijote\",\n  \"author\": \"Miguel de Cervantes\",\n  \"isbn\": \"978-84-376-0494-7\",\n  \"cost_usd\": \"15.99\",\n  \"selling_price_local\": null,\n  \"stock_quantity\": 25,\n  \"category\": \"Literatura Cl√°sica\",\n  \"supplier_country\": \"ES\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/books/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "books"
          ]
        }
      }
    }
  ]
}